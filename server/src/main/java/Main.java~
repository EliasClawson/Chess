import com.sun.net.httpserver.HttpServer;
import server.UserHandler;
import server.GameHandler;
import service.UserService;
import service.GameService;
import dataaccess.UserDAO;
import dataaccess.GameDAO;
import dataaccess.AuthDAO;
import java.net.InetSocketAddress;

public class Main {
    public static void main(String[] args) throws Exception {
        HttpServer server = HttpServer.create(new InetSocketAddress(8080), 0);

        // Initialize DAOs and Services
        UserDAO userDAO = new UserDAO();
        GameDAO gameDAO = new GameDAO();
        AuthDAO authDAO = new AuthDAO();
        UserService userService = new UserService(userDAO, authDAO);
        GameService gameService = new GameService(gameDAO, authDAO);

        // Set up handlers
        server.createContext("/user", new UserHandler(userService));
        server.createContext("/game", new GameHandler(gameService));
        server.createContext("/session", new UserHandler(userService)); // If needed for login/logout

        server.setExecutor(null); // Default executor
        server.start();

        System.out.println("â™• 240 Chess Server started on port 8080");
    }
}
